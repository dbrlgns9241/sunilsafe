<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.pinkroom.sample.walletconnectkit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalletConnectKit"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MAIN.SplashActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustResize">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".MAIN.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustResize"
            tools:ignore="DuplicateActivity,MissingClass"/>
        <activity
            android:name=".LOGIN.JoinActivity"
            android:exported="true"
            android:parentActivityName=".MAIN.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            tools:ignore="DuplicateActivity,MissingClass" />
        <activity
            android:name=".LOGIN.LoginActivity"
            android:exported="true"
            android:parentActivityName=".MAIN.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            tools:ignore="DuplicateActivity,MissingClass" />
        <activity
            android:name=".NFT.NFTActivity"
            android:exported="true"
            android:parentActivityName=".MAIN.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            tools:ignore="DuplicateActivity,MissingClass" />
        <activity
            android:name=".NFT.CrawlingActivity"
            android:exported="true"
            android:parentActivityName=".NFT.NFTActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            tools:ignore="DuplicateActivity,MissingClass" />
        <activity
            android:name=".NFT.ImageViewActivity"
            android:exported="true"
            android:parentActivityName=".NFT.CrawlingActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            tools:ignore="DuplicateActivity,MissingClass" />
    </application>

</manifest>